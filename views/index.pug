extends layout

block content
    header
    h1 Books
    P
        a.button(href="/books/new") Create New Book
    table
        thead
            tr.head-row
                th Title
                th Author
                th Genre
                th Year
        tbody
            each book in books
                tr
                    td
                        a(href="/books/" + book.id) #{book.title}
                    td= book.author
                    td= book.genre
                    td= book.year